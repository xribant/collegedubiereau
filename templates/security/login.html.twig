<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('build/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('build/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('build/favicon-16x16.png') }}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Admin Biéreau | Login </title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Fonts & Icons -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="{{ asset('assets/admin/css/themify-icons.css') }}" rel="stylesheet">

    <!-- Bootstrap core CSS     -->
    <link href="{{ asset('assets/admin/css/bootstrap.min.css') }}" rel="stylesheet" />

    <!-- Paper Dashboard core CSS    -->
    <link href="{{ asset('assets/admin/css/paper-dashboard.css') }}" rel="stylesheet"/>
    
</head>

<body>

<div class="wrapper wrapper-full-page">
    <div class="full-page login-page" data-color="purple" data-image="{{ asset('build/background-2.jpg') }}">
        <!--   you can change the color of the filter page using: data-color="blue | azure | green | orange | red | purple" -->
        <div class="content">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
                        <form id="loginFormValidation" method="post" class="form-horizontal" novalidate>
                            <div class="card" data-background="color" data-color="blue">
                                <div class="card-header d-flex justify-content-center">
                                    <img src="{{ asset('build/logo_biereau.png') }}" alt="Logo">
                                    <h3 class="card-title">Admin Login</h3>
                                </div>
                                <div class="card-content">
                                    <div class="form-group">
                                        <label for="email"></label>
                                        {% if error %}
                                            <div class="col-md-10 col-md-offset-1 alert alert-danger">
                                                {{ error.messageKey|trans(error.messageData, 'security') }}
                                            </div>
                                        {% endif %}
                                        <div class="col-md-10 col-md-offset-1">
                                            <input
                                                    type="email"
                                                    placeholder="E-Mail"
                                                    value="{{ last_username }}"
                                                    name="email"
                                                    id="email"
                                                    class="form-control"
                                                    autocomplete="email" autofocus
                                                    required="true"
                                            >
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputPassword"></label>
                                        <div class="col-md-10 col-md-offset-1">
                                            <input
                                                    type="password"
                                                    placeholder="Mot de passe"
                                                    name="password"
                                                    id="inputPassword"
                                                    class="form-control input-no-border"
                                                    autocomplete="current-password"
                                            >
                                        </div>
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3"></label>
                                        <div class="col-md-10 col-md-offset-1">
                                            <div class="checkbox">
                                                <input id="checkbox15" type="checkbox" name="_remember_me">
                                                <label for="checkbox15">
                                                    Mémoriser
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer text-center">
                                    <button type="submit" class="btn btn-fill btn-wd mb-2">Connexion</button>
                                    <div class="forgot">
                                        <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié?</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

