{% extends 'admin/admin_base.html.twig' %}

{% block title %}Gestion des sections du site{% endblock %}

{% block pageTitle %}Sections{% endblock %}

{% block content %}
<!-- start: page -->
<section class="card">
    <header class="card-header">
        <div class="card-actions">
            <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
            <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
        </div>

        <h2 class="card-title">Gestion des sections</h2>
    </header>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-6">
                <div class="mb-3">
                    <a href="{{ path('app_section_new') }}" class="btn btn-primary">Ajouter <i class="fas fa-plus"></i></a>
                </div>
            </div>
        </div>
        <table class="table table-bordered table-striped mb-0" id="datatable-editable">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Articles</th>
                    <th>Date de cr√©ation</th>
                    <th>Date de modification</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for section in sections %}
                <tr>
                    <td>{{ section.title }}</td>
                    <td>Plein d'articles</td>
                    <td>{{ section.createdAt|format_datetime('medium', 'medium',locale='fr') }}</td>
                    <td>{{ section.updatedAt|format_datetime('medium', 'medium',locale='fr') }}</td>
                    <td class="actions">
                        <a href="{{ path('app_section_edit', {'uid': section.uid}) }}" class="on-default edit-row" title="Modifier"><i class="fas fa-pencil-alt"></i></a>
                        <form style="display: inline-block;" method="post" action="{{ path('app_section_delete', {'uid': section.uid}) }}" onsubmit="return confirm('Etes-vous certain de vouloir supprimer cette section?');">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ section.uid) }}">
							<button title="Supprimer" class="btn btn-sm delete-row">
							    <i class="far fa-trash-alt"></i>
							</button>
						</form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune section</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</section>
<!-- end: page -->
{% endblock %}
